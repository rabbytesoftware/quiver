{	
	"server": {
		"port": 8080,
		"host": "0.0.0.0",
		"read_timeout": 30,
		"write_timeout": 30
	},

	"logger": {
		"show": false,
		"level": "info",
		"log_dir": "./logs",
		"max_size": 100,
		"max_age": 7,
		"compress": true
	},
	
	"packages": {
		"repositories": ["./pkgs"],
		"install_dir": "./pkgs", // TODO: We should be able to set this directory to a different location, depending on the host OS.
		"database_path": "./pkgs/packages.db"
	},

	"netbridge": {
		"port_range_start": 65000,
		"port_range_end": 65534
	}
}
